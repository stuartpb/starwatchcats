doctype html
html
  head
    meta(charset='utf-8')
    title= repoName
    link(
      rel="stylesheet"
      href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.css"
    )
    style.
      html {
        margin-right: 32px;
      }
      body {
        position: relative;
      }
  body
    h1= repoName
    for cat in stargazes
      - var created = new Date(cat.created_at);
      - var top = ((Date.now() - created) / 60000) + 'px';
      - var left = (Math.random() * 100) + '%';
      img(src="/github-media/octocats/blacktocat-32.png",
        alt='(cat)', title=cat.actor.login,
        style="position:absolute;top:" +top+';left:'+left+';')
